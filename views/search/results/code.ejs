<h1>Country Code Results</h1>
<%- include('../../partials/searchBar.ejs') %> 

<br>
<div style='display: flex; flex-direction: row; width: 100%; height: 100%'>
<img src="<%= response.flag %>" height='300px' width="50%" style='display: inline; padding-right: 20px'>
<div style="width: 70%; height: 100%;">
<h1><%= response.name  %></h1>
<form method='POST' action='/profile/favorites'>
    <input hidden type='hidden' name='name' value='<%= response.name %>'>
    <button type='submit'>Add To Favorites</button>
</form>
<h3>Info:</h3>
<ul>
    <li>Abbreviations: <%= response.alpha2Code %>, <%= response.alpha3Code %></li>
    <li>Reigon: <%= response.region %></li>
    <li>Continent: <%= response.subregion %> </li>
    <li>Population: <%= response.population  %></li>
    <li>Capital: <%= response.capital  %></li>
    <li>Language: <%= response.languages[0].name  %></li>
    <li>Timezones: <%= zones %> </li>
</ul>
</div>
</div>